


<form id="insertForm">

	<h5>Exercise:	</h5>
	<input type="text" name="exercise" ><br>
	<h5>Reps:	</h5>
	<input type="number" name="reps" min="1" max="10000"><br>
	<h5>Weight:	</h5>
	<input type="number" name="weight" min="1" max="10000"><br>
	<h5>LBS or KG :	</h5>
	<input type="checkbox" name="units" ><br>
	<h5>Date:</h5>	
	<input type="date" name="date" ><br>
	<input type="submit" name="Add Item" value="Add Item" id="addItemSubmit">
	
</form>


<br>



<table id="exerciseTable">

	<tr>
		<th><b>Name</b></th>
		<th><b>Reps</b></th>
		<th><b>Weight</b></th>
		<th><b>KG/LBS</b></th>
		<th><b>Date</b></th>
		<th><b>Update</b></th>
		<th><b>Delete</b></th>
	</tr>
	
	{{#if results}}
		{{#each results}}
			<tr>
			
				<td>{{this.name}}</td>
				<td>{{this.reps}}</td>
				<td>{{this.weight}}</td>
				<td>{{this.lbs}}</td>
				<td>{{this.date}}</td>
				
				
				<td>
					<a href="/edit?id={{this.id}}"><input type="button" value="edit"></a>
			    </td>
				
				<td>
					<input type="button" name="delete" value="Delete" onClick="deleteRow('exerciseTable',{{this.id}})">
					<input type="hidden" id="delete{{this.id}}">
			    </td>
			</tr>
		{{/each}}
	{{/if}}
</table>
